html
  height 100%

h1, h2, h3, ul, div, p, body, a
  margin 0
  padding 0
  color white
  text-decoration none
  font-family Avenir, 'Helvetica Neue', Helvetica, Arial, sans-serif

body, #app
  font-family Avenir, 'Helvetica Neue', Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  display flex
  flex 1
  height 100%
  max-height 100vh
  overflow hidden
  background #2d0840

#app
  overflow auto

input
  color white

.overflow-hidden {
  overflow hidden!important
}
